<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dquicaliquinS6T1.Views.vAgregar"
             Title="vAgregar">
    <VerticalStackLayout>

        <Label  Text="Agregar Sitio"
        FontSize="20"
        HorizontalTextAlignment="Center"
        />

        <Entry  x:Name="txtIdUbicacion"
        Placeholder="Ingrese el Id de la Ubicacion"
        Keyboard="Numeric"
        />
        <Entry  x:Name="txtNombreSitio"
        Placeholder="Ingrese el nombre del lugar"
        />
        <Entry  x:Name="txtDescripcionSitio"
        Placeholder="Ingrese la Descripcion"
        />
        <Entry  x:Name="txtReferenciaSitio"
        Placeholder="Ingrese la referencia"
        />
        <Entry  x:Name="txtLongitudSitio"
        Placeholder="Ingrese la Longitud"
        Keyboard="Numeric"
        />
        <Entry  x:Name="txtLatitudSitio"
        Placeholder="Ingrese la Latitud"
        Keyboard="Numeric"
        />
        <Entry  x:Name="txtCiudadSitio"
        Placeholder="Ingrese la Ciudad"
        />
        <Entry  x:Name="txtProvinciaSitio"
        Placeholder="Ingrese la Provincia"
        />
        
        <Button x:Name="btnAgregar"
        Text="Guardar"
        Clicked="btnAgregar_Clicked"
        />

    </VerticalStackLayout>
</ContentPage>
    
    
    